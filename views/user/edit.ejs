<!DOCTYPE html>
<html lang="en">
  <%- include ('../partials/head.ejs', {titulo: 'Editar perfil', cssSheets: 'styles_edit_users'}) %>

  <header> <%- include ('../partials/header.ejs') %></header>
  <body>
    <main>
        
        



        <div class="contenedor-formulario">    <!-- CLASE QUE CONTIENE A TODO EL FORMULARIO-->
            <div class="registro-logo">
                <img class="imagen-paycript-formulario" src="/images/paycrypt-logo.svg" alt="">
            </div>
        
            <div>
                <p class="p-editar-perfil "> Aqui puedes editar tu perfil</p><h5 class="nombre-usuario-a-editar"><%= user.name + ' ' + user.lastName %></h5>
            </div>
            </br> 
                <!-- AQUI PONER IMAGEN DE PERFIL  USUARIO ACTUAL  -->
    
                  <!-- CAJA FLEX DEL  FORMULARIO-->
                <form id="form-user-edit" class="prueba-formulario" action="/user/edit" method="POST" enctype="multipart/form-data">
                    <div class="formulario-flex">
                    
                    
                     <div>
                        <label for="name"></label>
                        <input  class="formulario-control icono-placeholder-nombre"  name="name" id="name" placeholder=" Editar Nombre" value="<%= user.name %>"> <!--NOMBRE USUARIO-->  
                        <small class="text-danger name"></small>
                    </div>
    
                    <div>
                        <label for="lastName"></label>
                        <input class="formulario-control icono-placeholder-apellido" type="text" name="lastName" id="lastName" placeholder="Editar apellido" value="<%= user.lastName %>">  <!-- APELLIDO-->
                    </div>
                    
                    <div>
                        <label for="dni"></label> 
                        <input class="formulario-control icono-placeholder-dni" type="number" name="dni" id="dni" placeholder="Editar DNI" value="<%= user.dni %>">                 <!-- NUMERO DE DOCUMENTO (DNI)-->
                    </div>
                    
                    <div>
                        <label for="email"></label>
                        <input class="formulario-control icono-placeholder-email" type="email" name="email" id="email" placeholder="Editar e-mail" value="<%= user.email %>">   <!-- CORREO ELECTRONICO-->
                    </div>
    
                    <div>
                        <label for="password"></label>
                        <input class="formulario-control icono-placeholder-password" type="password" name="password" id="password" required="" placeholder="Nueva contraseña">  <!-- Cambiar Contraseña-->
                    </div>
                    <div>
                        <label for="password1"></label>
                        <input class="formulario-control icono-placeholder-confirm-password" type="password" name="password1" id="password1" placeholder="Confirmar nueva contraseña">  <!-- CONTRASEÑA-->
                    </div>
                    <div>
                    <div class="nueva-foto-perfil">
                        <label class="#photo-profile" for="image"> Imagen de perfil</label>
                        <input class="formulario-control icono-placeholder-usuario" type="file" name="image" id="image" value="<%= user.image %>">  <!-- NUEVO- IMAGEN PERFIL -->
                    </div>
                    
                   
                    <div class="boton-formulario-continuar" >
                        
                        <button type="submit">Continuar</button>
                    </div>
                </div>  
                    
                </form>
            </div>
        
        </main>
        <script src="/js/UserEditForm.js"></script>
    </body>
    </html>