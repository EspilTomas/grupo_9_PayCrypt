<!DOCTYPE html>
<html lang="en">
  <%- include ('../partials/head.ejs', {titulo: 'Registro', cssSheets:
  'styles_register'}) %>

  <body>
    <%- include ('../partials/header.ejs') %>
    <main>
      <!-- Form container-->
      <div class="form-container">
        <!-- PayCrypt logo-->
        <div class="logo-register">
          <img src="/images/paycrypt-logo.svg" alt="" />
        </div>

        <div>
          <h1>Para crear tu cuenta necesitamos validar tus datos</h1>
        </div>

        <!-- CAJA FLEX DEL  FORMULARIO-->
        <form
          class="form"
          id="form"
          action="/user/register"
          method="POST"
          enctype="multipart/form-data"
        >
          <div>
            <h2>Información personal</h2>
          </div>
          <div>
            <label for="name"></label>
            <input type="text" name="name" id="name" placeholder="Nombre" />
            <small class="text-danger name"></small>
            <!--NOMBRE USUARIO-->
            <% if (locals.errors && errors.name) { %>
            <p class="text-danger"><%= errors.name.msg %></p>
            <% } %>
          </div>

          <div>
            <label for="lastName"></label>
            <input
              type="text"
              name="lastName"
              id="lastName"
              placeholder="Apellido"
            />
            <small class="text-danger lastName"></small>
            <!-- APELLIDO-->
            <% if (locals.errors && errors.lastName) { %>
            <p class="text-danger"><%= errors.lastName.msg %></p>
            <% } %>
          </div>

          <div>
            <label for="dni"></label>
            <input type="number" name="dni" id="dni" placeholder="DNI" />
            <small class="text-danger dni"></small>
            <!-- NUMERO DE DOCUMENTO (DNI)-->
            <% if (locals.errors && errors.dni) { %>
            <p class="text-danger"><%= errors.dni.msg %></p>
            <% } %>
          </div>
          <div>
            <label for="location"></label>
            <input
              type="text"
              name="location"
              id="location"
              placeholder="Ubicación"
            />
            <small class="text-danger location"></small>
            <% if (locals.errors && errors.location) { %>
            <p class="text-danger"><%= errors.location.msg %></p>
            <% } %>
          </div>
          <div>
            <h2>Información de cuenta</h2>
          </div>
          <div>
            <label for="email"></label>
            <input type="email" name="email" id="email" placeholder="E-mail" />
            <small class="text-danger email"></small>
            <!-- CORREO ELECTRONICO-->
            <% if (locals.errors && errors.email) { %>
            <p class="text-danger"><%= errors.email.msg %></p>
            <% } %>
          </div>

          <div>
            <label for="password"></label>
            <input
              type="password"
              name="password"
              id="password"
              placeholder="Contraseña"
            />
            <small class="text-danger password"></small>
            <!-- CONTRASEÑA-->
            <% if (locals.errors && errors.password) { %>
            <p class="text-danger"><%= errors.password.msg %></p>
            <% } %>
          </div>
          <div>
            <label for="passwordConfirm"></label>
            <input
              type="password"
              name="passwordConfirm"
              id="passwordConfirm"
              placeholder="Confirmar Contraseña"
            />
            <small class="text-danger passwordConfirm"></small>
            <!-- CONTRASEÑA-->
            <% if (locals.errors && errors.passwordConfirm) { %>
            <p class="text-danger"><%= errors.passwordConfirm.msg %></p>
            <% } %>
          </div>

          <div class="form-button-image" id="form-button-image">
            <label for="image">
              <div class="form-button-image-text">
                <i class="fas fa-upload"></i> Subir Imagen
              </div>
            </label>
            <!-- IMAGEN DEL PRODUCTO-->
            <input type="file" name="image" id="image" accept=".jpg" />
            <small class="text-danger image"></small>
            <% if (locals.errors && errors.image) { %>
            <p class="text-danger"><%= errors.image.msg %></p>
            <% } %>
          </div>

          <div class="form-button">
            <div class="form-button-checkbox">
              <input
                id="form-button-checkbox-input"
                type="checkbox"
                name="terminos"
                required=""
              />
              <label for="terminos"
                >He leído y acepto los Términos y Condiciones.</label
              >
              <!-- CAJA TERMINOS Y CONDICIONES-->
            </div>

            <div class="form-button-done">
              <button type="submit">Continuar</button>
            </div>

            <div class="form-button-login">
              <a role="button" href="/user/login"
                ><button type="button">Iniciar sesión</button></a
              >
            </div>
          </div>
        </form>
      </div>
    </main>
  </body>
</html>
