<!DOCTYPE html>
<html lang="en">
  <%- include ('../partials/head.ejs', {titulo: 'Inicio de Sesión', cssSheets:
  'styles_login'}) %>

  <body>
    <%- include ('../partials/header.ejs') %>
    <main>
      <div class="form-container">
        <div class="logo-login">
          <img src="/images/paycrypt-logo.svg" alt="" />
        </div>
        <div>
          <h1>¡Hola! Ingresa tus datos</h1>
        </div>
        <form class="form" id="form" action="/user/login" method="post">
          <div>
            <label for="email"></label>
            <input type="email" name="email" id="email" placeholder="E-mail" />
            <small class="text-danger email"></small>
          </div>
          <div>
            <label for="password"></label>
            <input
              type="password"
              name="password"
              id="password"
              placeholder="Contraseña"
            />
            <small class="text-danger password"></small>
          </div>
          <div class="form-button">
            <div class="form-button-checkbox">
              <input
                type="checkbox"
                name="remember"
                value="on"
                id="form-button-checkbox-input"
              />
              <label for="remember">Recordarme</label>
            </div>

            <div class="form-button-forgotten-password">
              <p><a href="#">¿Olvidaste tu contraseña?</a></p>
            </div>
          </div>

          <div class="form-button-done">
            <button type="submit">Continuar</button>
          </div>
          <div class="form-button-register">
            <a role="button" href="/user/register"
              ><button type="button">Crear Cuenta</button></a
            >
          </div>
        </form>
      </div>
    </main>
    <script src="/js/loginValidate.js"></script>
  </body>
</html>
