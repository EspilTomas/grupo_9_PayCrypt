<!DOCTYPE html>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script> 
<html lang="en">
  <%- include ('../partials/head.ejs', {titulo: 'Detalles', cssSheets:
  'styles_profile'}) %>
  <body>
    <!-- Header -->
    <%- include('../partials/header.ejs'); %>

    <!-- Main -->
    <main class="main">
      <section class="main-section">
        <article class="main-section-article">
          <div class="main-section-article-profile">
            <img
              class="main-section-article-profile-img"
              src="/images/users/<%= user.image %>"
            />
          </div>
          <div class="main-section-article-email"><%= user.email %></div>
        </article>
        <article class="main-section-article-2">
          <ul class="main-section-article-2-ul">
            <li class="main-section-article-2-ul-li">
              <div class="main-section-article-2-ul-li-icon">
                <span class="material-icons"> manage_accounts </span>
              </div>
              <a href="/user/edit">Modificar datos</a>
            </li>
            <li class="main-section-article-2-ul-li-delete">
              <div class="main-section-article-2-ul-li-icon">
                <span class="material-icons"> person_remove </span>
              </div>
              
              <button class="main-section-article-button-2" onclick="alertar();">
                Cancelar cuenta
              </button>
              <script type="text/javascript">
               function alertar() {
                swal({
                      title: "Â¿Estas Seguro?",
                      text: "Al eliminar tu cuenta, se borraran todos tus datos",
                      icon: "warning",
                      buttons: true,
                      dangerMode: true,
                    })
                    .then((willDelete) => {
                      if (willDelete) {
                        swal("Tu cuenta a sido eliminada con exito", {
                          icon: "success",
                        });
                        
                      } else {
                       
                      }
                    });
                 }
              </script>
                </button>
    
              
              
            </li>
          </ul>
        </article>
      </section>
    </main>
  </body>
</html>
