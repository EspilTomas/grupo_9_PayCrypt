<!-- Header: menu, logo, search, nav -->
<header class="header">
  <!-- Menu -->
  <div class="header-menu">
    <span class="material-icons"> menu </span>
  </div>
  <!-- Logo -->
  <div class="header-logo">
    <img class="header-logo-img" src="/images/paycrypt-logo.svg" />
  </div>
  <ul class="header-nav-menu">
    <li>Productos <span class="material-icons"> arrow_drop_down </span></li>
    <li>Cotizaciones <span class="material-icons"> arrow_drop_down </span></li>
  </ul>
  <!-- Search -->
  <form class="header-search">
    <input
      type="text"
      class="header-search-bar"
      placeholder="Buscá productos, marcas y más..."
      maxlength="120"
    />
    <button type="submit" class="header-search-button">
      <span class="material-icons"> search </span>
    </button>
  </form>
  <nav class="header-nav">
    <% if (locals.isLogged) { %>
    <!-- Shopping -->
    <a class="header-nav-shopping">Mis compras</a>
    <!-- Cart -->
    <a href="/cart" class="header-nav-cart">
      <span class="material-icons"> shopping_cart </span>
    </a>
    <% } else { %>
    <!-- Log In -->
    <a href="./users/login" class="header-nav-login">Ingresá</a>
    <% } %>
  </nav>
</header>
