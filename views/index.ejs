<!DOCTYPE html>
<html lang="en">
  <!-----------------HEAD - ACÁ LINKEO ENLACES EXTERNOS------------------------->
  
  <%- include ('./partials/head.ejs', {titulo: 'PayCrypt', cssSheets: 'styles_index'}) %>

  <body>

    <%- include ('./partials/header.ejs') %> 

    <!-----------------ACÁ VA A PARTIR DEL BANNER E-COMMERCE------------------------->
    <main>
      <!------BANNER------------->
      <div class="banner">
        <img src="/images/banner.png" alt="Banner">
      </div>

      <!------CÍRCULOS DENTRO DE UN SECTION, CADA CIRCULO ES UN ARTICLE----------->
      <section class="navbar-circles">
        <article class="each-circle">
          <div class="icon-product">
            <i class="fas fa-car"></i>
          </div>
          <h3>Vehículos</h3>
        </article>

        <article class="each-circle">
          <div class="icon-product">
            <i class="fas fa-home"></i>
          </div>
          <h3>Inmuebles</h3>
        </article>

        <article class="each-circle">
          <div class="icon-product">
            <i class="fas fa-laptop"></i>
          </div>
          <h3>Tecnología</h3>
        </article>

        <article class="each-circle">
          <div class="icon-product">
            <i class="fas fa-futbol"></i>
          </div>
          <h3>Deportes</h3>
        </article>

        <div class="ver-mas">
          <article class="each-circle">
            <div class="icon-product">
              <i class="fas fa-plus"></i>
            </div>
            <h3>Ver más</h3>
          </article>
        </div>

        <div class="nft-mineria">
          <article class="each-circle">
            <div class="icon-product">
              <i class="far fa-gem"></i>
            </div>
            <h3>NFT</h3>
          </article>

          <article class="each-circle">
            <div class="icon-product">
              <i class="fab fa-hubspot"></i>
            </div>
            <h3>Minería</h3>
          </article>
        </div>

      </section>

      <!------EN EL SIGUIENTE SECTION ARRANCAN LAS PUBLICACIONES DE PRODUCTOS, C/U ES UN ARTICLE----------->
      <h2 class="buscados">Los más buscados</h2>

      <section class="list-of-products">

        <!------PRIMER PRODUCTO----------->
        <article class="each-product">
          <a href="/details">
            <div class="img-product">
              <img src="/images/auto.jpg" alt="">
            </div>
              
            <div class="product-description">
              <p class="price">25.000
                <span>
                  <img src="images/usdt-logo.svg" alt="" class="usdt">
                </span>
              </p>
              <p class="category">
                <i class="far fa-folder-open"></i>
                Vehículos
              </p>
              <h3 class="name-of-product">Volkswagen Golf</h3>
              <p class="description">0km, DSG 1.4t año 2021</p>
              <p class="date">
                <i class="fas fa-clock"></i>
                3 días atrás
              </p>
            </a>
          </div>

          <div class="place">
            <i class="fas fa-map-marker-alt"></i>
            <p>La Plata, GBA Sur.</p>
          </div>
        </article>
        
        <!------SEGUNDO PRODUCTO----------->
        <article class="each-product">
          <div class="img-product">
            <img src="/images/zapatilla.jpg" alt="">
          </div>
            
          <div class="product-description">
            <p class="price">50
              <span>
                <img src="images/usdt-logo.svg" alt="" class="usdt">
              </span>
            </p>
            <p class="category">
              <i class="far fa-folder-open"></i>
              Deportes
            </p>
            <h3 class="name-of-product">Zapatillas Nike</h3>
            <p class="description">Nuevo</p>
            <p class="date">
              <i class="fas fa-clock"></i>
              11 días atrás
            </p>
          </div>

          <div class="place">
            <i class="fas fa-map-marker-alt"></i>
            <p>Paraná, Entre Ríos.</p>
          </div>
        </article>

        <!------TERCER PRODUCTO----------->
        <article class="each-product">
          <div class="img-product">
            <img src="/images/notebook.jpg" alt="">
          </div>
            
          <div class="product-description">
            <p class="price">1.000
              <span>
                <img src="images/usdt-logo.svg" alt="" class="usdt">
              </span>
            </p>
            <p class="category">
              <i class="far fa-folder-open"></i>
              Tecnología
            </p>
            <h3 class="name-of-product">Notebook Dell</h3>
            <p class="description">Intel Core i7, 8gb de RAM...</p>
            <p class="date">
              <i class="fas fa-clock"></i>
              7 días atrás
            </p>
          </div>

          <div class="place">
            <i class="fas fa-map-marker-alt"></i>
            <p>Palermo, Capital Federal.</p>
          </div>
        </article>

        <!------CUARTO PRODUCTO----------->
        <article class="each-product">
          <div class="img-product">
            <img src="/images/departamento.jpg" alt="">
          </div>
            
          <div class="product-description">
            <p class="price">150.000
              <span>
                <img src="images/usdt-logo.svg" alt="" class="usdt">
              </span>
            </p>
            <p class="category">
              <i class="far fa-folder-open"></i>
              Inmuebles
            </p>
            <h3 class="name-of-product">Dpto. en Martínez</h3>
            <p class="description">3 amb - 60m2 cubiertos</p>
            <p class="date">
              <i class="fas fa-clock"></i>
              15 días atrás
            </p>
          </div>

          <div class="place">
            <i class="fas fa-map-marker-alt"></i>
            <p>Martínez, GBA Norte.</p>
          </div>
        </article>
      </section>


    </main>
    <!------ACÁ TERMINA EL MAIN------------------------------------------------------>
    <%- include ('./partials/footer.ejs') %> 
  </body>
</html>
