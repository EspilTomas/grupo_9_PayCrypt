<!DOCTYPE html>
<html lang="en">
  <!-----------------HEAD - ACÁ LINKEO ENLACES EXTERNOS------------------------->
  
  <%- include ('./partials/head.ejs', {titulo: 'PayCrypt', cssSheets: 'styles_index'}) %>

  <body>

    <%- include ('./partials/header.ejs') %> 

    <!-----------------ACÁ VA A PARTIR DEL BANNER E-COMMERCE------------------------->
    <main>
      <!------BANNER------------->
      <div class="banner">
        <img src="/images/banner.png" alt="Banner">
      </div>

      <!------CÍRCULOS DENTRO DE UN SECTION, CADA CIRCULO ES UN ARTICLE----------->
      <section class="navbar-circles">
        <article class="each-circle">
          <div class="icon-product">
            <i class="fas fa-car"></i>
          </div>
          <h3>Vehículos</h3>
        </article>

        <article class="each-circle">
          <div class="icon-product">
            <i class="fas fa-home"></i>
          </div>
          <h3>Inmuebles</h3>
        </article>

        <article class="each-circle">
          <div class="icon-product">
            <i class="fas fa-laptop"></i>
          </div>
          <h3>Tecnología</h3>
        </article>

        <article class="each-circle">
          <div class="icon-product">
            <i class="fas fa-futbol"></i>
          </div>
          <h3>Deportes</h3>
        </article>

        <div class="ver-mas">
          <article class="each-circle">
            <div class="icon-product">
              <i class="fas fa-plus"></i>
            </div>
            <h3>Ver más</h3>
          </article>
        </div>

        <div class="nft-mineria">
          <article class="each-circle">
            <div class="icon-product">
              <i class="far fa-gem"></i>
            </div>
            <h3>NFT</h3>
          </article>

          <article class="each-circle">
            <div class="icon-product">
              <i class="fab fa-hubspot"></i>
            </div>
            <h3>Minería</h3>
          </article>
        </div>

      </section>

      <!------EN EL SIGUIENTE SECTION ARRANCAN LAS PUBLICACIONES DE PRODUCTOS, C/U ES UN ARTICLE----------->
      <h2 class="buscados">Los más buscados</h2>

      
      <section class="list-of-products">
      <!------PRODUCTOS AUTOMATIZADOS CON EJS----------->
      <% productsSent.forEach(producto => { %>
        <article class="each-product">
          <a href="/product/detail/<%= producto.id %> ">  
           <div class="img-product">
              <img src="/images/products/<%= producto.photoProduct %>" alt=""> <!--poner con ejs -> producto.photoProduct --> 
           </div>
            
          <div class="product-description">
            <p class="price"><%= producto.priceProduct %>  <!--PRECIO-->

             <!--MUESTRA EL LOGO DE LA MONEDA QUE ELIGIO-->       
              <% if (producto.coin == "Bitcoin") { %> 
                <span>
                  <img src="images/btc-logo.svg" alt="" class="usdt">
                </span>
            
              <% }else if(producto.coin == "Ethereum") { %> 
                <span>
                  <img src="images/eth-logo.svg" alt="" class="usdt">
                </span> 
        
              <% }else { %>
                <span>
                  <img src="images/usdt-logo.svg" alt="" class="usdt">
                </span>

              <% } %>

            </p>

            <p class="category">
              <i class="far fa-folder-open"></i> <%= producto.category %> <!--CATEGORIA-->
            </p>


            <h3 class="name-of-product"><%= producto.name %></h3>
            <p class="description"><%= producto.shortDescription %></p>

            
              <!--Calculo de fecha-->
              <div class="product-date">
               <%var fecha1 = producto.date; //fecha del producto
                var fecha2 = new Date().getTime();  // fecha actual 
                var diff = Math.abs(fecha2 - fecha1); //restamos las fechas
                var diastranscurridos= Math.round(diff/(1000*60*60*24)); //dividimos apara sacar el numero entero
                if(diastranscurridos < 1){ %> 
                  <i class="fas fa-clock"></i> <span class="date"> Hoy </span> 
                <% } else if(diastranscurridos == 1) {%> 
                  <i class="fas fa-clock"></i> <span class="date"> <%= diastranscurridos %> día </span>
                <% } else { %> 
                <i class="fas fa-clock"></i> <span class="date"> <%= diastranscurridos %>  días atrás </span> 
                <% }%>
              </div>
          </a>
        </div>

        <div class="place">
          <i class="fas fa-map-marker-alt"></i> <span class="product-location"><%= producto.location %></span>
        </div>
      </article>
      <% }) %>

    </section>

    </main>
    <!------ACÁ TERMINA EL MAIN------------------------------------------------------>
    <%- include ('./partials/footer.ejs') %> 
  </body>
</html>
