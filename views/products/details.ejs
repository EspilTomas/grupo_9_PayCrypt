        <article class="main-section-article-2">
          <div class="main-section-article-div-2">
            <h3>Detalle de pago</h3>
            <div>
              <ul>
                <li class="main-section-article-ul-li">
                  25.000<img
                    class="main-section-article-ul-img-1"
                    src="/images/usdt-logo.svg"
                  />
                </li>
                <li class="main-section-article-ul-li-2">
                  0.53175<img
                    class="main-section-article-ul-img-2"
                    src="/images/btc-logo.svg"
                  />
                </li>
                <li class="main-section-article-ul-li-2">
                  7.23225<img
                    class="main-section-article-ul-img-2"
                    src="/images/eth-logo.svg"
                  />
                </li>
              </ul>
            </div>
            <div class="main-section-article-button">
              <button class="main-section-article-button-2" type="submit">
                Agregar al carrito
              </button>
            </div>
          </div>
        </article>
      </section>
    </main>
    <%- include ('../partials/footer.ejs') %> 
