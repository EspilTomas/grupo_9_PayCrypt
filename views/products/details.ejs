<!DOCTYPE html>
<html lang="es-AR">
  <%- include ('../partials/head.ejs', {titulo: 'Detalles', cssSheets: 'styles_product_detail'}) %>
  
  <body>
    <%- include ('../partials/header.ejs') %> 
    <!-- Main: 2 sections, 3 articles -->
    <main class="main">
      <!-- Section 1: image -->
      <section class="main-section">
        <img class="main-section-img" src="/images/<%=products.photoProduct%>"/>
      </section>
      <!-- Section 2: 3 articles - name, description, pay details - button add to cart -->
      <section class="main-section-2">
        <!-- Article 1: name  -->
        <article class="main-section-article">
          <h1 class="main-section-article-h1"><%=products.name%></h1>
          <h2 class="main-section-article-h2"><%=products.shortDescription%></h2>
          <div class="main-section-article-price"><%=products.price%>

            <% if (products.coin == "Bitcoin") { %> 
              <img class="main-section-article-img" src="images/btc-logo.svg" alt="" class="usdt">
            
            <% }else if(products.coin == "Ethereum") { %> 
              <img class="main-section-article-img" src="images/eth-logo.svg" alt="" class="usdt">
            
            <% }else { %>
              <img class="main-section-article-img" src="images/usdt-logo.svg" alt="" class="usdt">
            <% } %>

          </div>
        </article>
        <!-- Article 2: description -->
        <article class="main-section-article-2">
          <div class="main-section-article-div">
            <h3 class="main-section-article-h3">Descripci√≥n</h3>
            
            <p class="main-section-article-ul">
              <%=products.description%>
            </p>

          </div>
        </article>

                <!-- Article 3: pay details, button add to cart -->
        <article class="main-section-article-2">
          <div class="main-section-article-div-2">
            <h3>Detalle de pago</h3>
            <div>
              <ul>
                <li class="main-section-article-ul-li"> <!--CODIGO PENSADO COLOCAR ACA //MARCOS-->
                  25.000<img
                    class="main-section-article-ul-img-1"
                    src="/images/usdt-logo.svg"
                  />
                </li>
                <li class="main-section-article-ul-li-2">
                  0.53175<img
                    class="main-section-article-ul-img-2"
                    src="/images/btc-logo.svg"
                  />
                </li>
                <li class="main-section-article-ul-li-2">
                  7.23225<img
                    class="main-section-article-ul-img-2"
                    src="/images/eth-logo.svg"
                  />
                </li>
              </ul>
            </div>
            <div class="main-section-article-button">
              <button class="main-section-article-button-2" type="submit">
                Agregar al carrito
              </button>
            </div>
          </div>
        </article>
      </section>
    </main>
    <%- include ('../partials/footer.ejs') %> 
  </body>
</html>
